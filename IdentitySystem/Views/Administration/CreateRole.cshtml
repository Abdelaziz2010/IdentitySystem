@model IdentitySystem.DTOS.RoleDto
@{
    ViewData["Title"] = "Create Role";
}
<h1>CreateRole</h1>

<form asp-action="CreateRole" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" style="width:40%" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" style="margin-top:1rem">Create Role</button>
    </div>
</form>

<div>
    <a style="margin-top:1rem" asp-action="ListRoles" class="btn btn-outline-primary">Back to List</a>
</div>